#!/usr/bin/env bash

set -euo pipefail

if [[ $# -lt 1 ]]; then
  echo "Usage: $0 <file>" >&2
  exit 1
fi

file="$1"

if [[ "$file" == *.parquet ]]; then
  reader="read_parquet"
elif [[ "$file" == *.csv ]]; then
  reader="read_csv"
else
  echo "Unsupported file type: $file"
  exit 1
fi

duckdb :memory: -init <(echo "CREATE TABLE input AS SELECT * FROM ${reader}('$file');")
